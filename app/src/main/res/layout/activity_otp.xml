<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".login.OTPActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/btnBack"
        android:src="@drawable/ic_back_arrow_left_black_24dp"
        android:tint="@color/white"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/verificationCodeLabel"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Verification Code"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/verificationCodeDesc"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/verificationCodeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="Please type verification code sent to +91 7559963361"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/mpinLayout"
            app:layout_constraintTop_toBottomOf="@id/verificationCodeDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et1"
                android:maxLength="1"
                android:textAlignment="center"
                tools:text="1"
                android:inputType="phone"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"

                />

            <Space
                android:layout_width="4dp"
                android:layout_height="0dp" />

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et2"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="phone"
                tools:text="2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="0dp" />

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et3"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="phone"
                tools:text="3"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="0dp" />

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et4"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="phone"
                tools:text="4"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="0dp" />

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et5"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="phone"
                tools:text="5"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="0dp" />

            <EditText
                android:textColor="@color/white"
                android:id="@+id/et6"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="phone"
                tools:text="6"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/otp_item"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>